<Window x:Class="УП.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УП"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="342" Margin="10,37,0,0" VerticalAlignment="Top" Width="490">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="Value" HorizontalAlignment="Left" Height="23" Margin="56,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" MaxLength="3"/>
                    <TextBox x:Name="Rez" IsReadOnly="True" HorizontalAlignment="Left" Height="24" Margin="56,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224"/>
                    <Button Content="Button" HorizontalAlignment="Left" Margin="91,157,0,0" VerticalAlignment="Top" Width="75" Click="CalculationOfTheFirstNumber_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="Value1" HorizontalAlignment="Left" Height="22" Margin="32,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="Value2" HorizontalAlignment="Left" Height="22" Margin="32,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="Value3" HorizontalAlignment="Left" Height="22" Margin="32,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="Kol1" IsReadOnly="True" HorizontalAlignment="Left" Height="22" Margin="218,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="Kol2" IsReadOnly="True" HorizontalAlignment="Left" Height="22" Margin="218,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button Content="Button" HorizontalAlignment="Left" Margin="32,140,0,0" VerticalAlignment="Top" Width="120" Click="CalculationOfTheSecondNumber_Click"/>
                    <Label Content="Количество положительных" HorizontalAlignment="Left" Margin="32,191,0,0" VerticalAlignment="Top"/>
                    <Label Content="Количество отрицательных" HorizontalAlignment="Left" Margin="32,217,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
